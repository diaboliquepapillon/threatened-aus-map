{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Where Do Australia's Threatened Animals Live?",
  "width": 800,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "australia.json",
    "format": {"type": "json"}
  },
  "transform": [
    {
      "lookup": "properties.state",
      "from": {
        "data": {
          "url": "threatened_species.csv"
        },
        "key": "state",
        "fields": ["count"]
      }
    },
    {
      "aggregate": [{
        "op": "sum",
        "field": "count",
        "as": "Threatened_Species"
      }],
      "groupby": ["properties.state"]
    }
  ],
  "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
  "encoding": {
    "shape": {"field": "geometry", "type": "geojson"},
    "color": {
      "field": "Threatened_Species",
      "type": "quantitative",
      "scale": {"scheme": "reds"},
      "title": "Number of Threatened Species"
    },
    "tooltip": [
      {"field": "properties.state", "title": "State"},
      {"field": "Threatened_Species", "type": "quantitative", "title": "Threatened Species"}
    ]
  }
}
